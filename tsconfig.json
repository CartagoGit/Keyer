{
	"compilerOptions": {
		//* -> For Tsx
		// "target": "ES2022",
		// "module": "ES2022",
		// "moduleResolution": "Bundler",
		//* -> For Tsc creating js
		"module": "CommonJS",
		"target": "ES5",
		"moduleResolution": "Node",
		"rootDir": "./src",
		"outDir": "./bin",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	}
}
