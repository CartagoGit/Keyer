{
	"compilerOptions": {
		"module": "CommonJS",
		// "target": "ES5",
		"target": "ES2020",
		"moduleResolution": "Node",
		"rootDir": "./src",
		"outDir": "./bin",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
